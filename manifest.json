{
    "manifest_version": 2,

    "name": "Page Mask",
    "version": "1.0",
    "description": "Mask the current page",
    "icons": {
        "48": "icon_48.png",
        "128": "icon_128.png"
    },
    "browser_action": {
        "default_icon": "icon.png",
        "default_title": "Put a mask layer on the page"
    },
    "permissions": [
        "activeTab"
    ],
    "background": {"scripts": ["background.js"]}
}